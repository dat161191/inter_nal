{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/redux/*": [
        "redux/*"
      ],
      "@/assets/*": [
        "assets/*"
      ],
      "@/shared/*": [
        "shared/*"
      ],
      "@/pages/*": [
        "pages/*",
      ],
      "@/validations/*": [
        "pages/modules/shared/constant/validations/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
  },
  "exclude": [
    "./node_modules",
    "./__tests__",
    "./dist.d.ts",
    "./dist"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}